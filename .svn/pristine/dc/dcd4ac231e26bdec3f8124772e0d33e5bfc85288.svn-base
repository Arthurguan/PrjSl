#afui ul li a {
	font-size:24px;
}

#afui label {
	font-size:24px;
}

#afui input[type="text"] {
	font-size:24px;
}

#afui label + input[type="text"] {
	font-size:24px;
}
#afui .button {
	font-size:24px;
}